{
  "name": "earth-matters",
  "private": true,
  "version": "0.0.0",
  "description": "A lightweight 3D physics core inspired by how Earth works.",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "keywords": [
    "react",
    "physics",
    "3d"
  ],
  "author": "DongYeon, Yu <ksr20612@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "vite build",
    "prettier": "prettier --write \"**/*.{js,ts,mts,tsx,json}\"",
    "convention": "pnpm prettier && eslint --fix \"**/*.{js,ts,mts,tsx}\"",
    "prepare": "husky install",
    "test": "vitest run --globals",
    "vitest:ui": "vitest --ui",
    "analyze-package": "cross-env ANALYZE_PACKAGE=true vite build"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "20.12.12",
    "@types/react": "18.3.3",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^1.6.1",
    "eslint": "^9.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-storybook": "^0.8.0",
    "globals": "^16.3.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^8.1.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.1"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./physics": {
      "import": "./dist/physics.mjs",
      "types": "./dist/physics.d.ts"
    },
    "./react": {
      "import": "./dist/react.mjs",
      "types": "./dist/react.d.ts"
    },
    "./vector": {
      "import": "./dist/vector.mjs",
      "types": "./dist/vector.d.ts"
    }
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "lint-staged": {
    "*.{js,ts,mts,tsx,json,mdx}": "prettier --write",
    "*.{js,ts,mts,tsx}": "eslint --fix"
  }
}
